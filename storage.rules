rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /courses/{courseId}/{allPaths=**} {
      allow read: if true; // veřejné čtení obrázků/příloh
      allow write: if request.auth != null && request.auth.token.role == 'teacher';
    }
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}