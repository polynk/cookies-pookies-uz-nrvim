// doporučená Storage rules (role-based). Nasadit v konzoli Firebase → Storage → Rules
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // povolit veřejné čtení souborů v courses (obrázky a přílohy)
    match /courses/{courseId}/{allPaths=**} {
      allow read: if true;
      // zápis jen pro autentizované uživatele s rolí teacher
      allow write: if request.auth != null && request.auth.token.role == 'teacher';
    }

    // ostatní cesty - zakázat
    match /{allPaths=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}